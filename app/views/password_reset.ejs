<!DOCTYPE html>
<html lang="en">
<head>
    
<!-- meta tags -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

<!-- RESOURCES -->

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;800&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="/refam/css/style.css" />
<link rel="stylesheet" type="text/css" href="/refam/css/main.css" />

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="/refam/javascript/env.js"></script>
<script src="/refam/javascript/constants.js"></script>


<div id="alertBox" style="display: none;">
    <span class="alertBox-close"> x </span>
    <span id="alertBoxText"></span>
</div>

<style>
	#alertBox{
		position: fixed;
		top: 0;
		z-index: 10;
		width: 100%;
	}
	.alertBox-close{
        display: inline-block;
        width: 1.5rem;
        height: 1.5rem;
        color: brown;
        margin: 0px 2rem;
        font-weight: bold;
		cursor: pointer;
		font-size: 1.25rem;
		line-height: 1.25rem;
		text-transform: uppercase;
    }
	.alertBox-close:hover{
		color:#fff
	}
	.delete{
		position:relative;
		float: left;
		margin-top:.5rem;
		margin-right: -4.5rem;
		border-radius:50%;
		background:red;
		border:1px red solid;
		color:yellow;
		width:2rem;
		height:2rem;
		font-family:arial;
		display:flex;
		align-items:center;
		justify-content:center;
		cursor: pointer;
		font-size: 1.25rem;
		text-transform: uppercase;
		z-index: 1;
	}
	.delete:hover{
		color:#fff;
		border:1px #fff solid
	}
	.table-video td.text{
		padding: 1rem;
	    word-break: break-all;
	}
	input{
		padding: .5rem;
		margin:.5rem
	}
	.form-group{
		display: flex;
		justify-content: center;
	}
</style>


<script>
	const alertBox = document.querySelector("#alertBox")
	const alertBoxText = document.querySelector("#alertBoxText")

	alertBox.children[0].onclick = ( e ) =>  { e.target.parentNode.style.display = "none" }

	function alertSuccess(txt){
		alertBox.style.display = "flex"
		alertBox.style.background="green"
		alertBoxText.innerHTML = txt
	}

	function alertWarning(txt){
		alertBox.style.display = "flex"
		alertBox.style.background="orange"
		alertBoxText.innerHTML = txt
	}
</script>
</head>
<body>
<div class="container-fluid login-container">
    <div class="row justify-content-center">
        <div class="col-6">
            <img src="/images/refam-logo.png" alt="" class="cover-login-img">
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 col-md-5 col-lg-4">
            <div class="login-form-container mb-2">
                <!-- Todo change correct method -->
                <form class="login-form" method="POST">
                    <h2 class="heading-login" style="text-shadow: -1px 0 white, 0 1px white, 1px 0 gray, 0 -1px gray;">
                        INGRESE LA NUEVA CONTRASEÑA </h2>

                    <div class="form-group">
                        <input name="newPwd" placeholder="NUEVA CONTRASEÑA" type="password"
                               class="form-control input input-password">
                    </div>
                    <div class="form-group">
                        <input name="newPwdComfirm" placeholder="CONFIRME CONTRASEÑA" type="password"
                               class="form-control input input-password">
                    </div>

                    <button type="submit" class="btn btn-login">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-10 col-md-10">
            <% if (!passwordResetSuccesful){ %>
                <p class="text-center mt-1 mb-1 forgot-pass"
                   style="color:#d32f2f;  text-shadow: -.2px 0 white, 0 .2px white, .2px 0 gray, 0 -1px gray;">
                    Usuario o contraseña incorrectos.
                </p>
            <% } %>

        </div>

    </div>
</div>
</body>
</html>